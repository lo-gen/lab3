class Player:
    def __init__(self, isReversed, xPos, col):
          self.reverse = isReversed
          self.pos = xPos
          self.colour = col

    def getIsReversed(self):
        return (self.reverse)
    
    def getXPos(self):
        return self.pos
    
    def getColour(self):
        return self.colour

    
p1 = Player(True, 90, "red")

print(p1)
